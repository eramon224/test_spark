    <%= f.password_field :password %>
  </div>
  <div class="field">
    <label for="advisor_user_password_confirmation">Re-type Password</label>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <label for="advisor_user_first_name">First Name</label>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <label for="advisor_user_last_name">Last Name</label>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :school_name %>
    <%= f.text_field :school_name %>
  </div>
  <div class="field">
    <%= f.label :school_level %>
    <%= f.select :school_level, options_for_select(%w[Elementary Middle High]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
